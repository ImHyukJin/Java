package Programers;

import java.util.Stack;

class Solution2 {
    public int[] solution(int[] numbers) {
        //특정 값마다 초기화해야되서 map이나 배열보단 stack이나 que 사용이 낫지않을까
        //map을 쓸거면 index값을 지정해줘야하고 근데 -1까지 기억해야됨 맵은 안됨
        Stack<int[]> stack = new Stack<>();
        //인덱스 값 ,값
        for(int i = 0 ; i < numbers.length ; i++) {
        	
        	int val = numbers[i];
        	
        	while(!stack.isEmpty() && stack.peek()[1]<val) {
        		numbers[stack.pop()[0]] =val;
        	}
        	int[] a = {i,numbers[i]};
        	stack.push(a);
        }
       
        
        
        return numbers;
    }
}